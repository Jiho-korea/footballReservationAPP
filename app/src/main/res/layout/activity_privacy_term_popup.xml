<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivacyTermPopupActivity">

    <TextView
        android:id="@+id/privacyTermPopupTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 개인 정보 처리 방침"
        android:background="@color/colorPrimary"
        android:textSize="17sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@color/colorBackground"
        android:drawableLeft="@drawable/privacy"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/privacyTermPopupTitle">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/privacyTermPopupTitle"
            android:text="@string/privacyTerm"
            />
    </ScrollView>

</android.support.constraint.ConstraintLayout>