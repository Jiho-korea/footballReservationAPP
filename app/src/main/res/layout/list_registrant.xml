<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="19sp"
    android:id="@+id/reservationText">
    <ListView
        android:id="@+id/studentList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/colorListViewDivider"
        android:dividerHeight="3dp"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="예약신청"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/colorMainButton"
        android:textColor="@color/colorBackground"/>

    <TextView
        android:id="@+id/empty_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="700sp"
        android:text="예약이 없습니다"
        android:visibility="gone"/>
</RelativeLayout>